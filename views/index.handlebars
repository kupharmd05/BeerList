<h1 class="text-center">Beers You'd Like to Drink</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 mt-5">
            <h3>Beers I'd Like to Drink</h3>
            <ul>
                {{#each beers}}
                {{#unless devoured}}<br>
                    {{> beers/beer-block devoured=false}}
                {{/unless}}
                {{/each}}

            </ul>

        </div>
        <div class="col-md-4 offset-md-2 mt-5">
            <h3>Beers I've Consumed</h3>
            <ul>
                {{#each beers}}
                {{#if devoured}}<br>
                    {{> beers/beer-delete devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <div class="row text-center mt-5">
        <div class="col-md-12">
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="beer" name="beer">
                </div>
                <div class="form-group">
                    <label for="devoured">Devoured?</label><br>
                    <input type="radio" name="devoured" value="1">Devoured<br>
                    <input type="radio" name="devoured" value="0">Not yet
                </div>
                <button type="submit" class="submit">Let's Drink</button>
                

            </form>
        </div>
    </div>
</div>