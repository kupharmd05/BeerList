<h1 class="text-center">Beers You'd Like to Drink</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <p>Beers I'd Like to Drink</p>
            <ul>
                {{#each beers}}
                {{#unless devoured}}
                <div>
                    <span>{{beer}}
                        <button data-id="{{id}}" class="drinkIt">Drink It!</button>
                    </span>
                </div>
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-6">
            <p>Beers I've Consumed</p>
            <ul>
                {{#each beers}}
                {{#if devoured}}
                <div class="enjoyedTheBeer">
                    <div>{{beer}}</div>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <div class="row text-center">
        <div class="col-md-12">
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="beer" name="beer">
                </div>
                <br>
                <button type="submit" class="submit">Let's Drink</button>
                <p>Enter a beer you'd like to drink</p>

            </form>
        </div>
    </div>
</div>